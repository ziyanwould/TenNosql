    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://at.alicdn.com/t/font_975764_3r2oc75uoi.css">
        <link rel="stylesheet" href="https://res.wx.qq.com/open/libs/weui/1.1.2/weui.min.css">
        <link rel="stylesheet" href="/css/pay.css">
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <div class="page">
                <div class="input">
                        <form action="">
                            <div class="child ">
                                <div class="left">
                                   <i class="iconfont  icon-anonymous-iconfont"></i>
                                </div>
                                <div class="right">
                                    <input class="weui-input " id="pay" type="text"  pattern="[0-9]*" autofocus="autofocus" placeholder="请输入充值金额">
                                </div>
                            </div>
                       
        
                        </form>
                    </div>
        
                    <div class="next">
                        <a href="javascript:;" class="weui-btn lan">下一步</a>
                    </div>
        </div>
        <script src="https://apps.bdimg.com/libs/jquery/2.0.0/jquery.min.js"></script>
        <script type="text/javascript" src="https://res.wx.qq.com/open/libs/weuijs/1.1.3/weui.min.js"></script>
        <script type="text/javascript">
       
        $(function(){
            //失败的自动获取
            var oInp = $('#pay')
             oInp.focus();

             $('.lan').click(()=>{
                 let value = $('#pay').val();
                // console.log('value',value);
                $.ajax({
                    type:"post",          // 请求类型
                    url:"/user/price",    // 请求URL
                    data:{
                        'price':value
                    },                     // 请求参数 即是 在Servlet中 request.getParement();可以得到的字符串
                                           // 数据返回类型
                    success:function(result){    // 成功返回的结果(响应)
                        console.log(result);
                        if(result=='成功'){
                            weui.toast('充值成功', {
                                duration: 3000,
                                className: "bears"
                            });

                            setTimeout(function(){
                                javascript :history.back(-1)
                            },1500)
                        }
                     

                    }
                });
             })
     
        })
           
        </script> 
    </body>
</html>