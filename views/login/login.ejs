    <style>
    .lanse{
        background:#31709A;
    }
    </style>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <div class="page">
            <div class="nav">
                首次使用需要绑定手机号
            </div>
            <div class="input">
                <form action="">
                    <div class="child ">
                        <div class="left">
                           <i class="iconfont  icon-shouji"></i>
                        </div>
                        <div class="right">
                            <input class="weui-input ipone" type="text" placeholder="请输入手机号码">
                        </div>
                    </div>
                    <div class="child ">
                        <div class="left">
                            <i class="iconfont  icon-yaochi"></i>
                        </div>
                        <div class="right">
                            <input class="weui-input yzm" type="text" placeholder="请输入验证码">
                            <button href="javascript:;" class="weui-btn dx weui-btn_mini weui-btn_primary">获取短信验证码</button>
                        </div>
                    </div>

                </form>
            </div>

            <div class="next">
                <a href="javascript:;" class="weui-btn lan">下一步</a>
            </div>
        </div>
        <script src="http://apps.bdimg.com/libs/jquery/2.0.0/jquery.min.js"></script>
        <script type="text/javascript" src="https://res.wx.qq.com/open/libs/weuijs/1.1.3/weui.min.js"></script>
        <script type="text/javascript">
       

         
          let pandu = false;
          let yzms = 0;
          
           $(".dx").click(()=>{
                var phone = jQuery(".ipone").val(),
                   dx = $('.yzm').val();               
                   var myreg = /^(((13[0-9]{1})|(14[0-9]{1})|(17[0]{1})|(15[0-3]{1})|(15[5-9]{1})|(18[0-9]{1}))+\d{8})$/;      
               if(myreg.test(phone)){
                    pandu=true;
                    weui.alert('短信验证码已发送！', function () {
                        console.log('ok');
                        }, {
                        title: ''
                    });
               }else{
                   weui.topTips('请填写正确的手机号', {
                        duration: 3000,
                        className: "custom-classname",
                        callback: function callback() {
                            console.log('close');
                        }
                    });
               }
        
           });
           $(".dx").click(btnCheck);
           $(".lan").click(()=>{
               var phone = jQuery(".ipone").val(),
                   dx = $('.yzm').val();
              
               
                var myreg = /^(((13[0-9]{1})|(14[0-9]{1})|(17[0]{1})|(15[0-3]{1})|(15[5-9]{1})|(18[0-9]{1}))+\d{8})$/;       
                if(phone == ''){
                    weui.alert("手机号码不能为空！");
                }else if(phone.length !=11){
                    weui.alert("请输入有效的手机号码！");
                }else if(!myreg.test(phone)){
                    weui.alert("请输入有效的手机号码！");
                }else if(dx== ''){
                    weui.alert("短信验证码不能为空！");
                }else if(dx!=yzms){
                    weui.alert("短信验证码错误！");
                }else{
                 


                    $.ajax({
                        type:"post",          // 请求类型
                        url:"/login/chaPhone",    // 请求URL
                        data:{
                            'phone':phone
                        },                     // 请求参数 即是 在Servlet中 request.getParement();可以得到的字符串
                                               // 数据返回类型
                        success:function(result){
                                               // 成功返回的结果(响应)

                            console.log(result);
                            if(result=='已存在'){
                                weui.alert("该号码已经被其他绑定！");
                                // var loading = weui.loading('已经添加过！');
                                //     setTimeout(function () {
                                //         loading.hide();
                                //     }, 3000);

                             }else{
                                window.location.href="/login/card"
                             }
                             //else{
                            //     setTimeout(()=>{
                            //         window.location.href="/che"
                            //     },1500)
                            //     weui.toast('添加成功', {
                            //         duration: 3000,
                            //         className: "bears"
                            //     });
                            // }
                          
                           
                          
                        }
                    });
                }

              
           })
            /**
            * 
            */
            function btnCheck() {
                if(!pandu){
                    return false;
                }
          
            var time = 5;
            $(this).attr("disabled", true);
            var that = $(this);
            var timer = setInterval(function() {
            if (time == 0) {
                clearInterval(timer);
                that.attr("disabled", false);
                that.html("重新获取验证码");
               
            } else {
                that.html(time + "秒");
                time--;
            }
            }, 1000);

                //随机数
                var Num="";
                for(var i=0;i<6;i++)
                {
                Num+=Math.floor(Math.random()*10);
                }
                yzms=Num;
                weui.topTips(`您的验证码为：${Num}`, {
                    duration: 1000*20,
                    className: "lanse",
                    callback: function callback() {
                        console.log('close');
                    }
                });
            }
        </script> 
    </body>
